{
  "name": "@kaiosilveira/refactoring-catalog-cli",
  "version": "0.0.3",
  "main": "dist/index.ts",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/kaiosilveira/refactoring-catalog-cli.git"
  },
  "bin": {
    "generate-cmt-table": "./dist/index.js"
  },
  "scripts": {
    "dev": "tsnd --ignore-watch node_modules src/index.ts",
    "start": "node dist/index.js",
    "build": "rimraf ./dist && tsc",
    "test": "jest ./src --passWithNoTests",
    "prettier:check": "npx prettier --check ./src",
    "prettier:fix": "npx prettier --write ./src",
    "lint": "npx eslint src/**/*.ts",
    "cmt": "npx git-cz",
    "generate-cmt-table": "node ./dist"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.4.3",
    "@commitlint/config-conventional": "^18.4.4",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.7",
    "@typescript-eslint/eslint-plugin": "6.18.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-config-standard-with-typescript": "43.0.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-n": "^16.6.1",
    "eslint-plugin-promise": "^6.0.0",
    "git-cz": "^4.9.0",
    "husky": "^8.0.0",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.0",
    "prettier": "^3.1.1",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "*"
  },
  "lint-staged": {
    "*.{css,less,scss,html,json,jsx,js}": [
      "prettier --write ."
    ],
    "*.js": "eslint --fix"
  },
  "engines": {
    "npm": ">=9.6.7",
    "node": ">=18.17.1",
    "yarn": ">=1.22.19"
  }
}
